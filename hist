library(ggplot2)
ggplot(faithful, aes(x = waiting)) + geom_histogram()

#storing value in a simple vector 
w <- faithful$waiting

#looking at the data that is not in a dataframe 
ggplot(NULL, aes(x = w)) + geom_histogram()

ggplot(faithful, aes(x = waiting )) + geom_histogram(binwidth = 5, fill = 'white', colour = 'black')

#Divinding x-range into 15 bins 
binsize <- diff(range(faithful$waiting))/15
ggplot(faithful, aes(x = waiting )) + geom_histogram(binwidth = binsize, fill = 'white', colour = 'black')

h <- ggplot(faithful, aes(x = waiting ))

h + geom_histogram(binwidth = 8, fill = 'white', colour = 'black', boundary = 31)

h + geom_histogram(binwidth = 8, fill = 'white', colour = 'black', boundary = 35)


library(MASS)

ggplot(birthwt, aes(x = bwt)) + geom_histogram(fill = 'white', colour = 'black') + facet_grid(smoke ~ .)

birthwt1 <- birthwt #make a cpoy of the data 

#Convert smoke to a factor 
birthwt1$smoke <- factor(birthwt1$smoke)
levels(birthwt1$smoke)

library(plyr)
birthwt1$smoke <- revalue(birthwt1$smoke, c("0"= "No Smoke", "1" = "Smoke"))

ggplot(birthwt, aes(x = bwt)) + geom_histogram(fill = 'white', colour = 'black') + facet_grid(smoke ~ .)


ggplot(birthwt, aes(x = bwt)) + geom_histogram(fill = 'white', colour = 'black') + facet_grid(race ~ .)

# free up the y-axis so that it resized independently in all graphs 
ggplot(birthwt, aes(x = bwt)) + geom_histogram(fill = 'white', colour = 'black') + facet_grid(race ~ ., scales = 'free')

#convert smoke a factor 
birthwt1$smoke <- factor(birthwt1$smoke)

# Map smoke to fill, make the bars NOT stacked and make them semitransparent 
ggplot(birthwt1, aes(x = bwt, fill = smoke)) + geom_histogram(position = "identity", alpha = .4)


#Making a density Curve
ggplot(faithful, aes(x = waiting )) + geom_density()

#if you don't like along the side and bottom , you can use geom_line(stat = "density)
ggplot(faithful, aes( x = waiting )) +geom_histogram()+ geom_density() #+ geom_line(stat = "density") + expand_limits(y = 0)

ggplot(faithful, aes(x = waiting , y = ..density..)) + geom_histogram(fill = 'cornsilk', colour = 'grey60', size = .2) + geom_density() + xlim(35,105)
